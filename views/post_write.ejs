<!DOCTYPE html>
<html dir="ltr">
  <head>
    <%- include (includes("head")); %>
    <script src="https://cdn.ckeditor.com/4.9.0/standard/ckeditor.js"></script>
    <script type="text/javascript">
    function submit() {
      if($("#title").val().trim() == "") { alert("제목이 빈칸일 수 없습니다!"); return; }
      if($("#content").val().trim() == "") { alert("내용이 없을 수 없습니다!"); return; }

      $("#post_write_form").submit();
    }
    </script>
  </head>
  <body id="target" class="pt-5 pb-5">
    <%- include (includes("header")) %>
    <div class="container pt-5 ml-auto mr-auto">
      <div class="row">
        <div class="col-xs-auto ml-auto mr-auto">
          <h3 class="__title"><%= boardTitle %></h3>
        </div>
      </div>
      <div class="row pt-3">
        <form class="ml-auto mr-auto" name="post_write_form" id="post_write_form" role="form" method="POST" action="<%= parent %>/write">
          <div class="form-group row">
            <label for="title" class="col-sm-3 col-form-label">제목</label>
            <input type="text" class="col-sm-9 form-control" name="title" id="title" placeholder="제목" />
          </div>
          <div class="form-group col-xs-auto">
            <textarea class="ckeditor" id="content" name="content">
              <p>This is the editor content.</p>
            </textarea>
            <script>
              CKEDITOR.replace( 'content' );
            </script>
          </div>
          <div class="form-group text-center col-xs-auto">
            <input type="button" onclick="submit();" class="btn btn-primary" name="submitButton" value="글쓰기" />
          </div>
          <input type="hidden" name="_csrf" value="<%= csrf %>" />
        </form>
      </div>
      <div class="row pt-5">
        <div class="col-xs-auto mr-auto float-sm-left">
            <div class="xs-col-auto">
              <input type="button" class="btn btn-xs btn-block btn-dark" aria-label="goBack" onclick="window.history.go(-1);" value="이전으로" />
            </div>
          </div>
        <div class="col-xs-auto ml-auto float-sm-right">
            <div class="xs-col-auto">
              <input type="button" class="btn btn-xs btn-block btn-dark" aria-label="write" onclick="location.href = location.pathname + '<%= parent %>/write';" value="글쓰기" />
            </div>
          </div>
      </div>
    </div>
    <%- include (includes("modal")) %>
    <%- include (includes("footer")) %>
  </body>
  <%- include (includes("foot")); %>
</html>
