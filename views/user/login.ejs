<!DOCTYPE html>
<html dir="ltr">
  <head>
    <%- include (includes("head")); %>
    <script src="/scripts/sha512.min.js" charset="utf-8"></script>
    <script src="/scripts/credentials.js" charset="utf-8"></script>
  </head>
  <body id="target" class="pt-5">
    <%- include (includes("header")) %>
    <div class="container pt-3">
      <div class="row">
        <div class="ml-auto mr-auto pt-5">
          <form name="loginForm" id="loginForm" role="form" method="post" action="/user/login">
            <div class="text-center mb-4">
              <h1 class="h3 __contextTitle">시스템 접속</h1>
            </div>
            <div class="form-group">
              <input id="username" name="username" class="form-control" type="text" placeholder="아이디" onkeyup="enterkey()" required maxlength="20" autofocus />
              <label for="username" class="sr-only">username</label>
            </div>
            <div class="form-group pt-1">
              <input id="passwordF" name="passwordF" class="form-control" type="password" placeholder="비밀번호" onkeyup="enterkey()" required />
              <label for="passwordF" class="sr-only">password</label>
            </div>
            <input type="hidden" name="password" id="password" value="" />
            <input type="hidden" name="_csrf" value="<%= csrf %>" />
            <input type="hidden" name="_retURL" value="<%= retURL %>" />
            <div class="pt-5">
            <button class="btn btn-lg btn-primary btn-block" type="button" onclick="login()">로그인</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <%- include (includes("modal")) %>
    <%- include (includes("footer")) %>
  </body>
  <%- include (includes("foot")); %>
</html>
